<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="10"
        android:baselineAligned="true"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/botonconfiguracion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/configuracion" />

        <Button
            android:id="@+id/botonsonido"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/consonido" />

        <Button
            android:id="@+id/botonayuda"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/quest" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="80"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/cabeceracuadrados"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="top|center"
            android:contentDescription="@string/imageLogo"
            android:src="@drawable/cabeceranombre" />

        <Button
            android:id="@+id/botonjugar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/play" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_weight="10"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/botonsalir"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/salir" />

    </LinearLayout>

</LinearLayout>